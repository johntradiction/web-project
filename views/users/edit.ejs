<!DOCTYPE html>
<html>

<head>
  <title>Edit user</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/javascripts/edit_user.js"></script>
</head>

<body>
  <nav class="navbar navbar-light bg-primary">  
    <form class="form-inline">
      <h5 class="text-light" style="margin:10px">Contact Management</h5>
      <input type="button" class="btn btn-primary btn-outline-light" style="margin: 5px" value="Index" onclick="location.href = '../../users';">
      <input type="button" class="btn btn-primary btn-outline-light" style="margin: 5px" value="New" onclick="location.href = '../../users/user';">
    </form>
  </nav>   
  <divrow class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <div class="card">
        <div class="card-header">
          Edit Contact
        </div>
        </br>
        <form>
          <div class="form-group px-5">
            <label for="exampleInputName">Name:</label>
            <input type="text" name= "name" value="<%= user.name %>" class="form-control" id="name" aria-describedby="emailHelp">
          </div>
          <div class="form-group px-5">
            <label for="exampleInputaddress">E-Mail:</label>
            <input type="text" name= "email" value="<%= user.email %>" class="form-control" id="email" aria-describedby="emailHelp">
          </div>
          <div class="form-group px-5">
            <label for="exampleInputphone">Phone:</label>
            <input type="text" name= "phone" value="<%= user.phone %>" class="form-control" id="phone" aria-describedby="emailHelp">
          </div>
          <div class="form-group px-5">
            <a id="updateButton" role="button" href="/users/details/<%= user._id%>" class="btn btn-success updateButton">Submit</a>
          </div>
        </form>      
      </div>
      <div class="col-4"></div>
    </div>
  </divrow>
</body>
<script>
  function delay (URL) {
    setTimeout( function() { window.location = URL }, 1000 );
  }
</script>
</html>